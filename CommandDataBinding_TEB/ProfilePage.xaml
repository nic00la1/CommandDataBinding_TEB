<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CommandDataBinding_TEB.ProfilePage">

    <ContentPage.Content>
        <VerticalStackLayout Padding="30,0" Spacing="25">
            <Image Source="{Binding ImageUrl}" HeightRequest="200" Aspect="AspectFit" />
            <Label Text="{Binding Name, StringFormat='Imię i nazwisko: {0}'}" FontSize="30"/>
            <Label Text="{Binding Description, StringFormat='Opis: {0}'}" FontSize="18" />
            <Label Text="{Binding Age, StringFormat='Wiek: {0}'}" FontSize="20" />
            <Label Text="{Binding Gender, StringFormat='Płeć: {0}'}" FontSize="20"/>
            <Label Text="{Binding Hobby, StringFormat='Hobby: {0}' }" FontSize="20"/>
        </VerticalStackLayout>
    </ContentPage.Content>
</ContentPage>
